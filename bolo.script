// Cores poss√≠veis dos LEDs
const cores = ["red", "yellow", "lime", "cyan", "magenta", "orange"];
// Quantidade de LEDs por faixa
const qtd = 20;

// Fun√ß√£o para criar LEDs dentro de um container
function criarLeds(container) {
  for (let i = 0; i < qtd; i++) {
    const led = document.createElement("div");
    led.classList.add("led");

    // Sorteia uma cor aleat√≥ria
    const cor = cores[Math.floor(Math.random() * cores.length)];
    led.style.background = cor;
    led.style.boxShadow = `0 0 8px ${cor}`;

    // Dura√ß√£o da anima√ß√£o aleat√≥ria (para piscar em tempos diferentes)
    led.style.animationDuration = (0.5 + Math.random() * 1.5) + "s";

    container.appendChild(led);
  }
}

// Cria LEDs nas 4 bordas
criarLeds(document.getElementById("led-top"));
criarLeds(document.getElementById("led-bottom"));
criarLeds(document.getElementById("led-left"));
criarLeds(document.getElementById("led-right"));

